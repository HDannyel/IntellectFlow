<Window x:Class="IntellectFlow.Views.CourseDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали курса" Height="600" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок курса -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="{Binding Course.Name}" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="{Binding Course.Description}" FontStyle="Italic" Margin="0 5 0 0"/>
        </StackPanel>

        <!-- Вкладки: Лекции, Задания, Студенты -->
        <TabControl Grid.Row="1">

            <!-- Лекции -->
            <TabItem Header="Лекции">
                <StackPanel Margin="5">
                    <ItemsControl ItemsSource="{Binding Lectures}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 5" >
                                    <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Width="200"/>
                                    <Button Content="Скачать файл"
                                            Command="{Binding DataContext.OpenLectureFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" Margin="5 0"/>
                                    <Button Content="Удалить"
                                            Command="{Binding DataContext.DeleteLectureCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" Margin="5 0" Background="LightCoral"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Форма добавления лекции -->
                    <TextBlock Text="Название лекции:" Margin="10 10 0 2"/>
                    <TextBox Text="{Binding NewLectureTitle, UpdateSourceTrigger=PropertyChanged}" Height="30"/>

                    <Button Content="Загрузить файл лекции" Command="{Binding UploadLectureFileCommand}" Margin="0 10 0 0"/>
                    <TextBlock Text="{Binding UploadedLectureFilePath}" FontSize="10" Foreground="Gray" Margin="0 3 0 0"/>

                    <Button Content="Добавить лекцию" Command="{Binding AddLectureCommand}" Margin="0 10 0 0"/>
                </StackPanel>
            </TabItem>

            <!-- Задания -->
            <TabItem Header="Задания">
                <StackPanel Margin="5">
                    <ItemsControl ItemsSource="{Binding Assignments}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 5" >
                                    <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Width="200"/>
                                    <Button Content="Скачать файл"
                                            Command="{Binding DataContext.OpenAssignmentFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" Margin="5 0"/>
                                    <Button Content="Удалить"
                                            Command="{Binding DataContext.DeleteAssignmentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" Margin="5 0" Background="LightCoral"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Форма добавления задания -->
                    <TextBlock Text="Название задания:" Margin="10 10 0 2"/>
                    <TextBox Text="{Binding NewAssignmentTitle, UpdateSourceTrigger=PropertyChanged}" Height="30"/>

                    <TextBlock Text="Описание задания:" Margin="0 5 0 2"/>
                    <TextBox Text="{Binding NewAssignmentDescription, UpdateSourceTrigger=PropertyChanged}" 
                             AcceptsReturn="True" Height="60"/>

                    <TextBlock Text="Срок сдачи:" Margin="0 5 0 2"/>
                    <DatePicker SelectedDate="{Binding NewAssignmentDueDate}"/>

                    <Button Content="Загрузить файл" Command="{Binding UploadFileCommand}" Margin="0 10 0 0"/>
                    <TextBlock Text="{Binding UploadedFilePath}" FontSize="10" Foreground="Gray" Margin="0 3 0 0"/>

                    <Button Content="Добавить задание" Command="{Binding AddAssignmentCommand}" Margin="0 10 0 0"/>
                </StackPanel>
            </TabItem>


            <!-- Студенты -->
            <TabItem Header="Студенты">
                <StackPanel Margin="5">
                    <!-- Список студентов на курсе -->
                    <TextBlock Text="Студенты на курсе:" FontWeight="Bold" Margin="0 0 0 5"/>
                    <ListBox ItemsSource="{Binding StudentsInCourse}"
                 SelectedItem="{Binding SelectedStudentInCourse}"
                 DisplayMemberPath="FullName"
                 Height="200"
                 Margin="0 0 0 10"/>

                    <!-- Кнопка удаления студента -->
                    <Button Content="Удалить студента из курса"
                Command="{Binding RemoveStudentFromCourseCommand}"
                Padding="8"
                Margin="0 0 0 15"
                HorizontalAlignment="Left"
                IsEnabled="{Binding SelectedStudentInCourse, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <!-- Добавление новых студентов -->
                    <TextBlock Text="Добавить студента:" FontWeight="Bold" Margin="0 0 0 5"/>
                    <ComboBox ItemsSource="{Binding AvailableStudents}"
                  SelectedItem="{Binding SelectedStudentToAdd}"
                  DisplayMemberPath="FullName"
                  Margin="0 0 0 10"/>

                    <Button Content="Добавить студента на курс"
                Command="{Binding AddStudentToCourseCommand}"
                Padding="8"
                HorizontalAlignment="Left"
                IsEnabled="{Binding SelectedStudentToAdd, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
