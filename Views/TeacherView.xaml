<UserControl x:Class="IntellectFlow.Views.TeacherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Top">

            <!-- Добавление курса -->
            <TextBlock Text="Добавить курс" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Выберите дисциплину:"/>
            <ComboBox ItemsSource="{Binding AllDisciplines}"
                      SelectedItem="{Binding SelectedDiscipline}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,10"/>
            <ComboBox ItemsSource="{Binding MyCourses}"
            SelectedItem="{Binding SelectedCourse}"
            DisplayMemberPath="Name"
            Margin="0,0,0,10"/>
            <TextBlock Text="Название курса:"/>
            <TextBox Text="{Binding CourseName}" Margin="0,0,0,10"/>

            <TextBlock Text="Описание курса:"/>
            <TextBox Text="{Binding CourseDescription}" Margin="0,0,0,15" AcceptsReturn="True" Height="60"/>

            <Button Content="Добавить курс"
                    Command="{Binding AddCourseCommand}"
                    Padding="8"
                    Margin="0,0,0,20"
                    IsEnabled="{Binding SelectedDiscipline, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Удалить курс"
                    Command="{Binding RemoveCourseCommand}"
                    Padding="8"
                    Margin="0,0,0,20"
                    IsEnabled="{Binding SelectedCourse, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Separator Margin="0,0,0,20"/>

            <!-- Управление студентами -->
            <TextBlock Text="Управление студентами" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Выберите курс:"/>
            <ComboBox ItemsSource="{Binding MyCourses}"
                      SelectedItem="{Binding SelectedCourse}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Студенты на курсе:"/>
            <ComboBox ItemsSource="{Binding StudentsInCourse}"
                      SelectedItem="{Binding SelectedStudentInCourse}"
                      DisplayMemberPath="FullName"
                      Margin="0,0,0,10"/>

            <Button Content="Удалить студента из курса"
                    Command="{Binding RemoveStudentFromCourseCommand}"
                    Padding="8"
                    Margin="0,0,0,15"
                    IsEnabled="{Binding SelectedStudentInCourse, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <TextBlock Text="Добавить студента:"/>
            <ComboBox ItemsSource="{Binding AvailableStudents}"
                      SelectedItem="{Binding SelectedStudentToAdd}"
                      DisplayMemberPath="FullName"
                      Margin="0,0,0,10"/>

            <Button Content="Добавить студента"
                    Command="{Binding AddStudentToCourseCommand}"
                    Padding="8"
                    IsEnabled="{Binding SelectedStudentToAdd, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Правая панель с вкладками -->
        <TabControl Grid.Column="1">
            <TabItem Header="Все дисциплины">
                <ListBox ItemsSource="{Binding AllDisciplines}"
                         SelectedItem="{Binding SelectedDiscipline}"
                         DisplayMemberPath="Name"
                         Margin="10"/>
            </TabItem>

            <TabItem Header="Мои дисциплины">
                <ListBox ItemsSource="{Binding MyDisciplines}"
                         SelectedItem="{Binding SelectedDiscipline}"
                         DisplayMemberPath="Name"
                         Margin="10"/>
            </TabItem>

            <!-- Вкладка Мои курсы -->
            <TabItem Header="Мои курсы">
                <ListBox ItemsSource="{Binding MyCourses}"
                         SelectedItem="{Binding SelectedCourse}"
                         DisplayMemberPath="Name">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <EventSetter Event="MouseDoubleClick" Handler="MyCourses_DoubleClick"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </TabItem>

            <TabItem Header="Студенты на курсе">
                <ListBox ItemsSource="{Binding StudentsInCourse}"
                         SelectedItem="{Binding SelectedStudentInCourse}"
                         DisplayMemberPath="FullName"
                         Margin="10"/>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
