<Window x:Class="IntellectFlow.Views.StudentCourseDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:IntellectFlow.DataModel"
        Title="Подробности курса"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB" 
        FontFamily="Segoe UI, Arial, sans-serif">

    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#357ABD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2C5AA0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCC"/>
                                <Setter Property="Foreground" Value="#888"/>
                                <Setter Property="BorderBrush" Value="#AAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для PasswordBox на основе TextBox -->
        <Style TargetType="PasswordBox" BasedOn="{StaticResource {x:Type TextBox}}"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Название курса и преподаватель -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{Binding Course.Name}" 
                       FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{Binding Course.Discipline.Teacher.FullName}" 
                       FontStyle="Italic" Foreground="Gray"/>
            <TextBlock Text="{Binding Course.Description}" 
                       TextWrapping="Wrap" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Список лекций -->
        <GroupBox Header="Лекции" Grid.Row="1" Margin="0,0,0,10">
            <ListView ItemsSource="{Binding Lectures}" SelectedItem="{Binding SelectedLecture}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Тема" Width="250" DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Скачать лекцию">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Скачать" 
                                            Command="{Binding DataContext.DownloadLectureFileCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Список заданий -->
        <GroupBox Header="Задания" Grid.Row="2" Margin="0,0,0,10">
            <ListView ItemsSource="{Binding StudentAssignments}" 
                      SelectedItem="{Binding SelectedStudentAssignment}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" Width="250" DisplayMemberBinding="{Binding Assignment.Title}"/>
                        <GridViewColumn Header="Срок сдачи" Width="150" DisplayMemberBinding="{Binding Assignment.DueDate}"/>

                        <!-- Статус с цветом -->
                        <GridViewColumn Header="Статус" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayStatus}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Submission.Status}" Value="{x:Static models:SubmissionStatus.Checked}">
                                                        <Setter Property="Foreground" Value="Green"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Submission.Status}" Value="{x:Static models:SubmissionStatus.Rejected}">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Submission.Status}" Value="{x:Static models:SubmissionStatus.Pending}">
                                                        <Setter Property="Foreground" Value="Orange"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Submission.Status}" Value="{x:Static models:SubmissionStatus.Submitted}">
                                                        <Setter Property="Foreground" Value="#0078D7"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Оценка" Width="80" DisplayMemberBinding="{Binding Submission.TeacherScore}"/>

                        <!-- Действия -->
                        <GridViewColumn Header="Действия">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Скачать" Margin="0,0,5,0" 
                                                Command="{Binding DataContext.DownloadAssignmentCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding Assignment}"/>
                                        <Button Content="Загрузить решение" 
                                                Command="{Binding DataContext.UploadSolutionCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding Assignment}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Детали решения -->
        <GroupBox Header="Детали решения" Grid.Row="3">
            <StackPanel Margin="10,5,10,10">

                <!-- Комментарий преподавателя -->
                <TextBlock Text="Комментарий преподавателя:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding SelectedStudentAssignment.Submission.TeacherComment, FallbackValue=Комментарий отсутствует}"
                         IsReadOnly="True" 
                         TextWrapping="Wrap" 
                         Height="60"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
