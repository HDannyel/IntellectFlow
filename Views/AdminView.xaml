<UserControl x:Class="IntellectFlow.Views.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="601.25" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель управления -->
        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Название дисциплины:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding DisciplineName}" Margin="0,0,0,10"/>

            <TextBlock Text="Описание (опционально):" Margin="0,0,0,5"/>
            <TextBox Text="{Binding DisciplineDescription}" Margin="0,0,0,10"/>

            <Button Content="Добавить дисциплину"
                    Command="{Binding AddDisciplineCommand}"
                    HorizontalAlignment="Left"
                    Padding="10,5"
                    Margin="0,0,0,10"/>

            <Button Content="Удалить выбранную дисциплину"
                    Command="{Binding DeleteDisciplineCommand}"
                    HorizontalAlignment="Left"
                    Padding="10,5"
                    Margin="0,0,0,20"
                    IsEnabled="{Binding SelectedDiscipline, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <TextBlock Text="Выберите дисциплину:" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Disciplines}"
                      SelectedItem="{Binding SelectedDiscipline}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Название курса:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding CourseName}" Margin="0,0,0,10"/>

            <TextBlock Text="Описание курса (опционально):" Margin="0,0,0,5"/>
            <TextBox Text="{Binding CourseDescription}" Margin="0,0,0,10"/>

            <Button Content="Добавить курс"
                    Command="{Binding AddCourseCommand}"
                    HorizontalAlignment="Left"
                    Padding="10,5"
                    Margin="0,0,0,10"/>

            <Button Content="Удалить выбранный курс"
                    Command="{Binding DeleteCourseCommand}"
                    HorizontalAlignment="Left"
                    Padding="10,5"
                    Margin="0,0,0,20"
                    IsEnabled="{Binding SelectedCourse, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <Button Content="Добавить преподавателя"
                    HorizontalAlignment="Left"
                    Padding="10,5"
                    Margin="0,10,0,0"
                    Click="AddTeacher_Click"/>


            <Button Content="Добавить студента"
                    HorizontalAlignment="Left"
                    Padding="10,5"
                    Margin="0,5,0,0"
                    Click="AddStudent_Click"/>

            <!-- Общая кнопка удаления -->
            <Button Content="Удалить пользователя"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Width="150"
                                Margin="0,10,0,0"
                                Command="{Binding DeleteUserCommand}"/>
        </StackPanel>

        <!-- Правая панель с данными -->
        <Grid Grid.Column="1">
            <TabControl>
                <TabItem Header="Дисциплины">
                    <ListBox ItemsSource="{Binding Disciplines}"
                             SelectedItem="{Binding SelectedDiscipline}"
                             Margin="10"
                             MouseDoubleClick="DisciplinesListBox_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontStyle="Italic" FontSize="12" TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
                <TabItem Header="Курсы">
                    <ListBox ItemsSource="{Binding Courses}"
                             SelectedItem="{Binding SelectedCourse}"
                             DisplayMemberPath="Name"
                             Margin="10"/>
                </TabItem>
                <TabItem Header="Пользователи">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Преподаватели -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Преподаватели" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <ListBox ItemsSource="{Binding Teachers}"
                                     DisplayMemberPath="FullName"
                                     SelectedItem="{Binding SelectedTeacher}"
                                     Margin="0,0,10,0"/>
                        </StackPanel>

                        <!-- Студенты -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Студенты" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <ListBox ItemsSource="{Binding Students}"
                                     DisplayMemberPath="FullName"
                                     SelectedItem="{Binding SelectedStudent}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
