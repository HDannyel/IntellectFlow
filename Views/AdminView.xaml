<UserControl x:Class="IntellectFlow.Views.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="1108.365" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Базовый стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCC"/>
                    <Setter Property="Foreground" Value="#888"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <!-- чуть шире левую панель -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель управления -->
        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,15,0">
            <TextBlock Text="Название дисциплины:" Margin="0,0,0,6"/>
            <TextBox Text="{Binding DisciplineName}" Margin="0,0,0,12"/>

            <TextBlock Text="Описание (опционально):" Margin="0,0,0,6"/>
            <TextBox Text="{Binding DisciplineDescription}" Margin="0,0,0,12" AcceptsReturn="True" Height="60"/>

            <Button Content="Добавить дисциплину"
                    Command="{Binding AddDisciplineCommand}"/>

            <Button Content="Удалить выбранную дисциплину"
                    Command="{Binding DeleteDisciplineCommand}"
                    IsEnabled="{Binding SelectedDiscipline, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <TextBlock Text="Выберите дисциплину:" Margin="0,15,0,6"/>
            <ComboBox ItemsSource="{Binding Disciplines}"
                      SelectedItem="{Binding SelectedDiscipline}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,12"/>

            <TextBlock Text="Название курса:" Margin="0,0,0,6"/>
            <TextBox Text="{Binding CourseName}" Margin="0,0,0,12"/>

            <TextBlock Text="Описание курса (опционально):" Margin="0,0,0,6"/>
            <TextBox Text="{Binding CourseDescription}" Margin="0,0,0,12" AcceptsReturn="True" Height="60"/>

            <Button Content="Добавить курс"
                    Command="{Binding AddCourseCommand}"/>

            <Button Content="Удалить выбранный курс"
                    Command="{Binding DeleteCourseCommand}"
                    IsEnabled="{Binding SelectedCourse, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <Separator Margin="0,20,0,10"/>

            <Button Content="Добавить преподавателя"
                    Click="AddTeacher_Click" Width="190"/>

            <Button Content="Добавить студента"
                    Margin="0,5,0,0"
                    Click="AddStudent_Click" Width="190"/>

            <Separator Margin="0,20,0,10"/>

            <Button Content="Удалить пользователя"
                    Command="{Binding DeleteUserCommand}"/>

          
        </StackPanel>

        <!-- Правая панель с данными -->
        <Grid Grid.Column="1">
            <TabControl>
                <TabItem Header="Дисциплины">
                    <ListBox ItemsSource="{Binding Disciplines}"
                             SelectedItem="{Binding SelectedDiscipline}"
                             Margin="10"
                             MouseDoubleClick="DisciplinesListBox_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontStyle="Italic" FontSize="12" TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
                <TabItem Header="Курсы">
                    <ListBox ItemsSource="{Binding Courses}"
                             SelectedItem="{Binding SelectedCourse}"
                             DisplayMemberPath="Name"
                             Margin="10"/>
                </TabItem>
                <TabItem Header="Пользователи">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Преподаватели -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Преподаватели" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <ListBox ItemsSource="{Binding Teachers}"
                                     DisplayMemberPath="FullName"
                                     SelectedItem="{Binding SelectedTeacher}"
                                     Margin="0,0,10,0"/>
                        </StackPanel>

                        <!-- Студенты -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Студенты" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <ListBox ItemsSource="{Binding Students}"
                                     DisplayMemberPath="FullName"
                                     SelectedItem="{Binding SelectedStudent}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Группы">
                    <StackPanel Margin="10">
                        <TextBlock Text="Название группы:" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Button Content="Добавить группу" 
                                    Command="{Binding AddGroupCommand}" 
                                    Width="130"
                                    Margin="0,0,10,0"/>
                            <Button Content="Удалить группу" 
                                    Command="{Binding DeleteGroupCommand}" 
                                    Width="130"/>
                        </StackPanel>

                        <ListBox ItemsSource="{Binding Groups}"
                                 SelectedItem="{Binding SelectedGroup}"
                                 DisplayMemberPath="Name"
                                 Height="200"/>
                    </StackPanel>
                </TabItem>

            </TabControl>
        </Grid>
    </Grid>
</UserControl>
